	</section>

	<section class="skills-preview">
		<div class="container">
			<h2 class="section-title">Technical Skills</h2>
			<div class="skills-grid">
				<div class="skill-category">
					<h3>Languages</h3>
					<div class="skill-tags">
						<span class="skill-tag">Python</span>
						<span class="skill-tag">TypeScript</span>
						<span class="skill-tag">JavaScript</span>
						<span class="skill-tag">C</span>
						<span class="skill-tag">Java</span>
						<span class="skill-tag">SQL</span>
					</div>
				</div>
				<div class="skill-category">
					<h3>Frameworks</h3>
					<div class="skill-tags">
						<span class="skill-tag">React</span>
						<span class="skill-tag">Next.js</span>
						<span class="skill-tag">Flask</span>
						<span class="skill-tag">TailwindCSS</span>
						<span class="skill-tag">PyTorch</span>
						<span class="skill-tag">TensorFlow</span>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding: 3rem 0 4rem;
		background: #fafaf8;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero-content {
		max-width: 900px;
		display: flex;
		align-items: flex-start;
		gap: 3rem;
	}

	.hero-text {
		flex: 1;
	}

	.profile-image {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid #2a2a2a;
		flex-shrink: 0;
	}

	.hero-title {
		font-size: 2rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: #2a2a2a;
		line-height: 1.4;
		letter-spacing: -0.02em;
	}

	.highlight {
		border-bottom: 2px solid #2a2a2a;
	}

	.hero-subtitle {
		font-size: 1rem;
		color: #6a6a6a;
		margin-bottom: 2rem;
		font-weight: 400;
	}

	.hero-description {
		font-size: 0.95rem;
		color: #4a4a4a;
		margin-bottom: 2.5rem;
		line-height: 1.7;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
		margin-bottom: 2.5rem;
	}

	.btn {
		padding: 0.6rem 1.2rem;
		text-decoration: none;
		font-weight: 500;
		font-size: 0.9rem;
		transition: all 0.2s ease;
		display: inline-block;
		border: 1px solid #2a2a2a;
		border-radius: 4px;
	}

	.btn-primary {
		background: #2a2a2a;
		color: #fafaf8;
	}

	.btn-primary:hover {
		background: #4a4a4a;
		border-color: #4a4a4a;
	}

	.btn-secondary {
		background: transparent;
		color: #2a2a2a;
	}

	.btn-secondary:hover {
		background: #2a2a2a;
		color: #fafaf8;
	}

	.hero-links {
		display: flex;
		gap: 1.5rem;
	}

	.social-link {
		color: #6a6a6a;
		transition: color 0.2s ease;
	}

	.social-link:hover {
		color: #2a2a2a;
	}

	.skills-preview {
		padding: 3rem 0 4rem;
		background: #fafaf8;
		border-top: 1px solid #e4e4e4;
	}

	.section-title {
		font-size: 1.5rem;
		margin-bottom: 2.5rem;
		color: #2a2a2a;
		font-weight: 600;
		letter-spacing: -0.02em;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 3rem;
		max-width: 700px;
	}

	.skill-category h3 {
		font-size: 1rem;
		margin-bottom: 1rem;
		color: #2a2a2a;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}

	.skill-tag {
		background: transparent;
		color: #4a4a4a;
		padding: 0.4rem 0.8rem;
		border: 1px solid #d4d4d4;
		border-radius: 4px;
		font-size: 0.85rem;
		font-weight: 400;
	}

	@media (max-width: 768px) {
		.hero-title {
			font-size: 1.75rem;
		}

		.hero-subtitle {
			font-size: 0.95rem;
		}

		.hero-buttons {
			flex-direction: column;
			align-items: flex-start;
		}

		.btn {
			width: 100%;
			text-align: center;
		}

		.skills-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>
