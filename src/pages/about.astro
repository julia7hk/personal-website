<style>
	.about-hero {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		text-align: center;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-title {
		font-size: 3rem;
		font-weight: 700;
		color: white;
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.education {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.95);
	}

	.section-title {
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 3rem;
		color: #333;
		font-weight: 600;
	}

	.education-card {
		background: white;
		border-radius: 20px;
		padding: 3rem;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		max-width: 800px;
		margin: 0 auto;
	}

	.education-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 2rem;
	}

	.university {
		font-size: 1.8rem;
		font-weight: 700;
		color: #667eea;
		margin-bottom: 0.5rem;
	}

	.location {
		color: #666;
		font-size: 1.1rem;
		margin-bottom: 0.25rem;
	}

	.duration {
		color: #888;
		font-size: 1rem;
	}

	.gpa {
		text-align: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 1.5rem;
		border-radius: 15px;
		min-width: 120px;
	}

	.gpa-number {
		display: block;
		font-size: 2rem;
		font-weight: 700;
	}

	.gpa-label {
		font-size: 0.9rem;
		opacity: 0.9;
	}

	.degrees {
		margin-bottom: 2rem;
	}

	.degree {
		margin-bottom: 1rem;
	}

	.degree h4 {
		font-size: 1.2rem;
		color: #333;
		font-weight: 600;
	}

	.coursework h4 {
		font-size: 1.3rem;
		color: #333;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.course-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.8rem;
	}

	.course-tag {
		background: #f0f4ff;
		color: #667eea;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 500;
		border: 1px solid rgba(102, 126, 234, 0.2);
	}

	.skills {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.98);
	}

	.skills-container {
		display: grid;
		gap: 3rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.skill-category {
		background: white;
		border-radius: 20px;
		padding: 2.5rem;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.category-title {
		font-size: 1.5rem;
		color: #333;
		margin-bottom: 2rem;
		font-weight: 600;
		text-align: center;
	}

	.skill-items {
		display: grid;
		gap: 1.5rem;
	}

	.skill-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.skill-name {
		font-weight: 500;
		color: #333;
		min-width: 120px;
	}

	.skill-bar {
		flex: 1;
		height: 8px;
		background: #f0f0f0;
		border-radius: 4px;
		overflow: hidden;
	}

	.skill-progress {
		height: 100%;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 4px;
		transition: width 0.8s ease;
	}

	.skill-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
		gap: 1rem;
	}

	.skill-badge {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 1rem;
		border-radius: 15px;
		text-align: center;
		font-weight: 500;
		transition: transform 0.3s ease;
	}

	.skill-badge:hover {
		transform: translateY(-5px);
	}

	.interests {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.95);
	}

	.interests-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.interest-card {
		background: white;
		border-radius: 20px;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.interest-card:hover {
		transform: translateY(-10px);
	}

	.interest-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.interest-card h3 {
		font-size: 1.3rem;
		color: #333;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.interest-card p {
		color: #666;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.page-title {
			font-size: 2.5rem;
		}

		.education-header {
			flex-direction: column;
			gap: 1.5rem;
		}

		.gpa {
			align-self: center;
		}

		.education-card {
			padding: 2rem;
		}

		.skill-category {
			padding: 2rem;
		}

		.skill-item {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.skill-name {
			min-width: auto;
		}

		.skill-grid {
			grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
		}

		.interests-grid {
			grid-template-columns: 1fr;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>