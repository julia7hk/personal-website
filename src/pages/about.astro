---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About - Julia Kang" description="Learn about Julia Kang's education at Purdue University and technical skills in computer science and artificial intelligence.">
	<section class="about-hero">
		<div class="container">
			<h1 class="page-title">About Me</h1>
			<p class="page-subtitle">
				Passionate about leveraging technology to solve real-world problems through innovative software solutions and AI applications.
			</p>
		</div>
	</section>

	<section class="education">
		<div class="container">
			<h2 class="section-title">Education</h2>
			<div class="education-card">
				<div class="education-header">
					<div class="education-main">
						<h3 class="university">Purdue University</h3>
						<p class="location">West Lafayette, Indiana</p>
						<p class="duration">August 2024 â€“ May 2027</p>
					</div>
					<div class="gpa">
						<span class="gpa-number">3.89</span>
						<span class="gpa-label">GPA</span>
					</div>
				</div>
				<div class="degrees">
					<div class="degree">
						<h4>Bachelor of Science in Computer Science</h4>
					</div>
					<div class="degree">
						<h4>Bachelor of Science in Artificial Intelligence</h4>
					</div>
					<div class="degree">
						<h4>Minor in Mathematics</h4>
					</div>
				</div>
				<div class="coursework">
					<h4>Relevant Coursework</h4>
					<div class="course-tags">
						<span class="course-tag">Data Structures and Algorithms</span>
						<span class="course-tag">Computer Architecture</span>
						<span class="course-tag">Artificial Intelligence Basics</span>
						<span class="course-tag">C Programming</span>
						<span class="course-tag">Object-Oriented Programming</span>
						<span class="course-tag">Probability</span>
						<span class="course-tag">Statistical Methods</span>
						<span class="course-tag">Discrete Mathematics</span>
						<span class="course-tag">Linear Algebra</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="skills">
		<div class="container">
			<h2 class="section-title">Technical Skills</h2>
			<div class="skills-container">
				<div class="skill-category">
					<h3 class="category-title">Programming Languages</h3>
					<div class="skill-items">
						<div class="skill-item">
							<span class="skill-name">Python</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 95%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">TypeScript</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 90%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">JavaScript</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 90%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">C</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 85%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">Java</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 80%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">SQL</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 85%"></div>
							</div>
						</div>
						<div class="skill-item">
							<span class="skill-name">R</span>
							<div class="skill-bar">
								<div class="skill-progress" style="width: 75%"></div>
							</div>
						</div>
					</div>
				</div>

				<div class="skill-category">
					<h3 class="category-title">Frameworks & Libraries</h3>
					<div class="skill-grid">
						<div class="skill-badge">
							<span>React</span>
						</div>
						<div class="skill-badge">
							<span>Next.js</span>
						</div>
						<div class="skill-badge">
							<span>TailwindCSS</span>
						</div>
						<div class="skill-badge">
							<span>Flask</span>
						</div>
						<div class="skill-badge">
							<span>Prisma</span>
						</div>
						<div class="skill-badge">
							<span>PyTorch</span>
						</div>
						<div class="skill-badge">
							<span>TensorFlow</span>
						</div>
						<div class="skill-badge">
							<span>NumPy</span>
						</div>
						<div class="skill-badge">
							<span>Pandas</span>
						</div>
						<div class="skill-badge">
							<span>Matplotlib</span>
						</div>
					</div>
				</div>

				<div class="skill-category">
					<h3 class="category-title">Tools & Technologies</h3>
					<div class="skill-grid">
						<div class="skill-badge">
							<span>Git & GitHub</span>
						</div>
						<div class="skill-badge">
							<span>AWS</span>
						</div>
						<div class="skill-badge">
							<span>Firebase</span>
						</div>
						<div class="skill-badge">
							<span>Supabase</span>
						</div>
						<div class="skill-badge">
							<span>PostgreSQL</span>
						</div>
						<div class="skill-badge">
							<span>Node.js</span>
						</div>
						<div class="skill-badge">
							<span>React Native</span>
						</div>
						<div class="skill-badge">
							<span>Netlify</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="interests">
		<div class="container">
			<h2 class="section-title">Areas of Interest</h2>
			<div class="interests-grid">
				<div class="interest-card">
					<h3>Artificial Intelligence</h3>
					<p>Machine learning applications, disaster response AI, and predictive modeling using PyTorch and TensorFlow.</p>
				</div>
				<div class="interest-card">
					<h3>Biomedical Research</h3>
					<p>Developing data pipelines and databases for peptide research and biomedical applications.</p>
				</div>
				<div class="interest-card">
					<h3>Full-Stack Development</h3>
					<p>Building scalable web applications using modern frameworks like React, Next.js, and cloud technologies.</p>
				</div>
				<div class="interest-card">
					<h3>Data Science</h3>
					<p>Data analysis, sentiment analysis, and statistical modeling for meaningful insights and decision-making.</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.about-hero {
		padding: 3rem 0 4rem;
		background: #fafaf8;
		border-bottom: 1px solid #e4e4e4;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-title {
		font-size: 2rem;
		font-weight: 600;
		color: #2a2a2a;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.page-subtitle {
		font-size: 0.95rem;
		color: #6a6a6a;
		max-width: 700px;
		line-height: 1.7;
	}

	.education {
		padding: 3rem 0 4rem;
		background: #fafaf8;
	}

	.section-title {
		font-size: 1.5rem;
		margin-bottom: 2.5rem;
		color: #2a2a2a;
		font-weight: 600;
		letter-spacing: -0.02em;
	}

	.education-card {
		background: transparent;
		border: 1px solid #e4e4e4;
		padding: 2rem;
		max-width: 700px;
		margin: 0 auto;
	}

	.education-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 2rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid #e4e4e4;
	}

	.university {
		font-size: 1.25rem;
		font-weight: 600;
		color: #2a2a2a;
		margin-bottom: 0.5rem;
		letter-spacing: -0.01em;
	}

	.location {
		color: #6a6a6a;
		font-size: 0.9rem;
		margin-bottom: 0.25rem;
	}

	.duration {
		color: #8a8a8a;
		font-size: 0.85rem;
	}

	.gpa {
		text-align: right;
		color: #2a2a2a;
		border-left: 2px solid #2a2a2a;
		padding-left: 1rem;
	}

	.gpa-number {
		display: block;
		font-size: 1.5rem;
		font-weight: 600;
	}

	.gpa-label {
		font-size: 0.85rem;
		color: #6a6a6a;
	}

	.degrees {
		margin-bottom: 2rem;
	}

	.degree {
		margin-bottom: 0.75rem;
	}

	.degree h4 {
		font-size: 0.95rem;
		color: #2a2a2a;
		font-weight: 500;
	}

	.coursework h4 {
		font-size: 1rem;
		color: #2a2a2a;
		margin-bottom: 1rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.course-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}

	.course-tag {
		background: transparent;
		color: #4a4a4a;
		padding: 0.4rem 0.8rem;
		border: 1px solid #d4d4d4;
		font-size: 0.85rem;
		font-weight: 400;
	}

	.skills {
		padding: 3rem 0 4rem;
		background: #fafaf8;
		border-top: 1px solid #e4e4e4;
	}

	.skills-container {
		display: grid;
		gap: 2.5rem;
		max-width: 700px;
		margin: 0 auto;
	}

	.skill-category {
		background: transparent;
		border: 1px solid #e4e4e4;
		padding: 2rem;
	}

	.category-title {
		font-size: 1rem;
		color: #2a2a2a;
		margin-bottom: 1.5rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.skill-items {
		display: grid;
		gap: 1rem;
	}

	.skill-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.skill-name {
		font-weight: 400;
		color: #2a2a2a;
		min-width: 120px;
		font-size: 0.9rem;
	}

	.skill-bar {
		flex: 1;
		height: 6px;
		background: #e4e4e4;
		overflow: hidden;
	}

	.skill-progress {
		height: 100%;
		background: #2a2a2a;
		transition: width 0.8s ease;
	}

	.skill-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
		gap: 0.8rem;
	}

	.skill-badge {
		background: transparent;
		color: #4a4a4a;
		padding: 0.6rem 1rem;
		border: 1px solid #d4d4d4;
		text-align: center;
		font-weight: 400;
		font-size: 0.85rem;
		transition: border-color 0.2s ease;
	}

	.skill-badge:hover {
		border-color: #2a2a2a;
	}

	.interests {
		padding: 3rem 0 4rem;
		background: #fafaf8;
		border-top: 1px solid #e4e4e4;
	}

	.interests-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.interest-card {
		background: transparent;
		border: 1px solid #e4e4e4;
		padding: 1.5rem;
		transition: border-color 0.2s ease;
	}

	.interest-card:hover {
		border-color: #2a2a2a;
	}

	.interest-card h3 {
		font-size: 1rem;
		color: #2a2a2a;
		margin-bottom: 0.75rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.interest-card p {
		color: #6a6a6a;
		line-height: 1.7;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.page-title {
			font-size: 1.75rem;
		}

		.education-header {
			flex-direction: column;
			gap: 1.5rem;
		}

		.gpa {
			border-left: none;
			border-top: 2px solid #2a2a2a;
			padding-left: 0;
			padding-top: 1rem;
			text-align: left;
		}

		.education-card {
			padding: 1.5rem;
		}

		.skill-category {
			padding: 1.5rem;
		}

		.skill-item {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.skill-name {
			min-width: auto;
		}

		.skill-grid {
			grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
		}

		.interests-grid {
			grid-template-columns: 1fr;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>