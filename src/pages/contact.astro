<style>
	.contact-hero {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		text-align: center;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.page-title {
		font-size: 3rem;
		font-weight: 700;
		color: white;
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.contact-content {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.95);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		align-items: start;
		max-width: 800px;
		margin: 0 auto;
	}

	.contact-info h2 {
		font-size: 2rem;
		color: #333;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.contact-description {
		color: #666;
		line-height: 1.6;
		margin-bottom: 3rem;
	}

	.contact-methods {
		margin-bottom: 3rem;
	}

	.contact-method {
		display: flex;
		gap: 1rem;
		margin-bottom: 2rem;
		padding: 1.5rem;
		background: white;
		border-radius: 15px;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.contact-method:hover {
		transform: translateY(-3px);
	}

	.contact-icon {
		flex-shrink: 0;
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
	}

	.contact-details h3 {
		font-size: 1.1rem;
		color: #333;
		margin-bottom: 0.3rem;
		font-weight: 600;
	}

	.contact-link {
		color: #667eea;
		text-decoration: none;
		font-weight: 500;
		display: block;
		margin-bottom: 0.3rem;
	}

	.contact-link:hover {
		text-decoration: underline;
	}

	.contact-text {
		color: #333;
		font-weight: 500;
		display: block;
		margin-bottom: 0.3rem;
	}

	.contact-details p {
		color: #666;
		font-size: 0.9rem;
		margin: 0;
	}

	.availability {
		background: white;
		border-radius: 15px;
		padding: 2rem;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
	}

	.availability h3 {
		font-size: 1.3rem;
		color: #333;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.status-card {
		display: flex;
		gap: 1rem;
		align-items: flex-start;
	}

	.status-indicator {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		margin-top: 0.3rem;
		flex-shrink: 0;
	}

	.status-indicator.active {
		background: #4ade80;
		box-shadow: 0 0 10px rgba(74, 222, 128, 0.5);
	}

	.status-info h4 {
		color: #333;
		margin-bottom: 0.5rem;
		font-weight: 600;
	}

	.status-info p {
		color: #666;
		line-height: 1.5;
		margin: 0;
	}


	.interests-connect {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.98);
	}

	.section-title {
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 3rem;
		color: #333;
		font-weight: 600;
	}

	.interests-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.interest-item {
		background: white;
		border-radius: 15px;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.interest-item:hover {
		transform: translateY(-5px);
	}

	.interest-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.interest-item h3 {
		font-size: 1.2rem;
		color: #333;
		margin-bottom: 0.5rem;
		font-weight: 600;
	}

	.interest-item p {
		color: #666;
		line-height: 1.5;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.page-title {
			font-size: 2.5rem;
		}

		.contact-grid {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.contact-method {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.contact-icon {
			align-self: center;
		}

		.status-card {
			flex-direction: column;
			gap: 0.5rem;
		}

		.status-indicator {
			align-self: flex-start;
		}


		.interests-grid {
			grid-template-columns: 1fr;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>