---
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.JPG';

const { frontmatter } = Astro.props;
const { title, date, description, prevPost, nextPost } = frontmatter;
const hasSeries = prevPost || nextPost;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description || title} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Julia Kang</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<nav class="navbar">
			<div class="nav-container">
				<a href="/" class="nav-logo">
					<Image src={profileImage} alt="Julia Kang" class="nav-profile-image" />
					<span>Julia Kang</span>
				</a>
				<button class="nav-toggle" aria-label="Toggle navigation">
					<span></span>
					<span></span>
					<span></span>
				</button>
				<div class="nav-menu">
					<a href="/" class="nav-link">Home</a>
					<a href="/about" class="nav-link">About</a>
					<a href="/experience" class="nav-link">Experience</a>
					<a href="/projects" class="nav-link">Projects</a>
					<a href="/blog" class="nav-link">Blog</a>
					<a href="/contact" class="nav-link">Contact</a>
				</div>
			</div>
		</nav>
		<script>
			const navToggle = document.querySelector('.nav-toggle');
			const navMenu = document.querySelector('.nav-menu');

			navToggle?.addEventListener('click', () => {
				navToggle.classList.toggle('active');
				navMenu?.classList.toggle('active');
			});

			// Close menu when a link is clicked
			const navLinks = document.querySelectorAll('.nav-link');
			navLinks.forEach(link => {
				link.addEventListener('click', () => {
					navToggle?.classList.remove('active');
					navMenu?.classList.remove('active');
				});
			});

			// Close menu when clicking outside
			document.addEventListener('click', (e) => {
				if (!navToggle?.contains(e.target as Node) && !navMenu?.contains(e.target as Node)) {
					navToggle?.classList.remove('active');
					navMenu?.classList.remove('active');
				}
			});
		</script>
		<main>
			<article class="blog-post">
				<header class="post-header">
					{prevPost && (
						<a href={`/blog/${prevPost.slug}`} class="series-link prev">
							<span class="series-arrow">&larr;</span>
							<span class="series-label">Previous</span>
						</a>
					)}
					{nextPost && (
						<a href={`/blog/${nextPost.slug}`} class="series-link next">
							<span class="series-label">Next</span>
							<span class="series-arrow">&rarr;</span>
						</a>
					)}
					<div class="post-meta">
						<time datetime={date}>{date}</time>
					</div>
					<h1 class="post-title">{title}</h1>
				</header>
				<div class="post-content">
					<slot />
				</div>
			</article>
		</main>
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Atkinson Hyperlegible Mono', 'Courier New', monospace;
		font-size: 16px;
		line-height: 1.65;
	}

	body {
		background: #fafaf8;
		min-height: 100vh;
		color: #2a2a2a;
	}

	.navbar {
		background: #fafaf8;
		border-bottom: 1px solid #d4d4d4;
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 1000;
		padding: 1rem 0;
	}

	.nav-container {
		max-width: 900px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 2rem;
	}

	.nav-logo {
		font-size: 1rem;
		font-weight: 600;
		color: #2a2a2a;
		text-decoration: none;
		letter-spacing: -0.02em;
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.nav-profile-image {
		display: none;
	}

	.nav-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 1001;
	}

	.nav-toggle span {
		width: 24px;
		height: 2px;
		background: #2a2a2a;
		transition: all 0.3s ease;
		border-radius: 2px;
	}

	.nav-toggle.active span:nth-child(1) {
		transform: translateY(6px) rotate(45deg);
	}

	.nav-toggle.active span:nth-child(2) {
		opacity: 0;
	}

	.nav-toggle.active span:nth-child(3) {
		transform: translateY(-6px) rotate(-45deg);
	}

	.nav-menu {
		display: flex;
		gap: 2rem;
	}

	.nav-link {
		color: #6a6a6a;
		text-decoration: none;
		font-weight: 400;
		font-size: 0.9rem;
		transition: color 0.2s ease;
	}

	.nav-link:hover {
		color: #2a2a2a;
	}

	main {
		margin-top: 60px;
		min-height: calc(100vh - 60px);
		padding: 3rem 0;
	}

	.blog-post {
		max-width: 700px;
		margin: 0 auto;
		background: #fafaf8;
		padding: 0 2rem;
	}

	.post-header {
		margin-bottom: 2.5rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid #e4e4e4;
		position: relative;
	}

	.series-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #6a6a6a;
		text-decoration: none;
		font-size: 0.85rem;
		padding: 0.5rem 0.75rem;
		border: 1px solid #d4d4d4;
		transition: all 0.2s ease;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
	}

	.series-link.prev {
		right: calc(100% + 2rem);
	}

	.series-link.next {
		left: calc(100% + 2rem);
	}

	.series-link:hover {
		color: #2a2a2a;
		border-color: #2a2a2a;
	}

	.series-arrow {
		font-size: 1rem;
	}

	.series-label {
		font-weight: 500;
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.post-meta time {
		color: #6a6a6a;
		font-size: 0.85rem;
		font-weight: 500;
	}

	.post-title {
		font-size: 2rem;
		font-weight: 600;
		color: #2a2a2a;
		line-height: 1.3;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.post-description {
		font-size: 0.95rem;
		color: #6a6a6a;
		line-height: 1.7;
	}

	.post-content {
		font-size: 0.95rem;
		line-height: 1.75;
		color: #2a2a2a;
	}

	.post-content h1,
	.post-content h2,
	.post-content h3,
	.post-content h4,
	.post-content h5,
	.post-content h6 {
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
		color: #2a2a2a;
		line-height: 1.3;
		letter-spacing: -0.01em;
	}

	.post-content h1 {
		font-size: 1.75rem;
		border-bottom: 1px solid #e4e4e4;
		padding-bottom: 0.5rem;
	}

	.post-content h2 {
		font-size: 1.5rem;
	}

	.post-content h3 {
		font-size: 1.25rem;
	}

	.post-content p {
		margin-bottom: 1.5rem;
	}

	.post-content a {
		color: #2a2a2a;
		text-decoration: none;
		border-bottom: 1px solid #2a2a2a;
		transition: all 0.2s ease;
	}

	.post-content a:hover {
		border-bottom-color: #6a6a6a;
		color: #6a6a6a;
	}

	.post-content ul,
	.post-content ol {
		margin-bottom: 1.5rem;
		padding-left: 2rem;
	}

	.post-content li {
		margin-bottom: 0.75rem;
		line-height: 1.7;
	}

	.post-content li ul,
	.post-content li ol {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	.post-content code {
		background: #f0f0f0;
		color: #2a2a2a;
		padding: 0.2rem 0.5rem;
		font-family: 'Atkinson Hyperlegible Mono', 'Courier New', monospace;
		font-size: 0.9em;
		font-weight: 500;
	}

	.post-content pre {
		background: #2a2a2a;
		color: #fafaf8;
		padding: 1.5rem;
		overflow-x: auto;
		margin-bottom: 1.5rem;
		border: 1px solid #4a4a4a;
	}

	.post-content pre code {
		background: transparent;
		color: inherit;
		padding: 0;
		font-size: 0.9rem;
		line-height: 1.6;
	}

	.post-content blockquote {
		border-left: 3px solid #2a2a2a;
		padding-left: 1.5rem;
		margin: 1.5rem 0;
		color: #4a4a4a;
		font-style: italic;
	}

	.post-content img {
		max-width: 100%;
		height: auto;
		margin: 2rem 0;
		border: 1px solid #e4e4e4;
	}

	.post-content strong {
		font-weight: 600;
		color: #2a2a2a;
	}

	.post-content em {
		font-style: italic;
	}

	.post-content hr {
		border: none;
		border-top: 1px solid #e4e4e4;
		margin: 3rem 0;
	}

	.post-content table {
		width: 100%;
		border-collapse: collapse;
		margin: 1.5rem 0;
		border: 1px solid #d4d4d4;
	}

	.post-content th,
	.post-content td {
		border: 1px solid #d4d4d4;
		padding: 0.75rem 1rem;
		text-align: left;
	}

	.post-content th {
		background: #f0f0f0;
		font-weight: 600;
	}

	.post-content tr:nth-child(even) {
		background: #f8f8f6;
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 0 1rem;
		}

		.nav-profile-image {
			display: block;
			width: 32px;
			height: 32px;
			border-radius: 50%;
			object-fit: cover;
			border: 2px solid #2a2a2a;
		}

		.nav-toggle {
			display: flex;
		}

		.nav-menu {
			position: fixed;
			top: 60px;
			right: -100%;
			width: 70%;
			max-width: 300px;
			height: calc(100vh - 60px);
			background: #fafaf8;
			border-left: 1px solid #d4d4d4;
			flex-direction: column;
			gap: 0;
			padding: 2rem 0;
			transition: right 0.3s ease;
			box-shadow: -2px 0 8px rgba(0, 0, 0, 0.05);
		}

		.nav-menu.active {
			right: 0;
		}

		.nav-link {
			font-size: 1rem;
			padding: 1rem 2rem;
			border-bottom: 1px solid #e4e4e4;
		}

		.nav-link:hover {
			background: #f0f0f0;
		}

		main {
			padding: 2rem 0;
		}

		.blog-post {
			padding: 0 1rem;
		}

		.series-link {
			display: none;
		}

		.post-title {
			font-size: 1.75rem;
		}

		.post-description {
			font-size: 0.9rem;
		}

		.post-content {
			font-size: 0.9rem;
		}

		.post-content h1 {
			font-size: 1.5rem;
		}

		.post-content h2 {
			font-size: 1.25rem;
		}

		.post-content h3 {
			font-size: 1.1rem;
		}

		.post-content pre {
			padding: 1rem;
			font-size: 0.85rem;
		}
	}
</style>
